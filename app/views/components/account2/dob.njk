<div class="grid-row">
  <div class="column-one-third">
    <p>Date of birth</p>
  </div>

  <div class="column-one-third">
    <ul>
      <li class="strong">  {{ data.personalDetails.dateOfBirth.value | asString }}  </li>
<!--
      <li class="sl-secondary-text-color sl-metadata">
        Since 5 Jun 2010
      </li>
-->
      <li class="multi-dates">
        {% if data.personalDetails.dateOfBirth.level == "Level 2" %}
          <img src="../../../public/images/green-tick-icon.svg" title="Green tick" class="ng-scope"> 
          <span class="sl-metadata">Verified to level 2</span>
        {% elif data.personalDetails.dateOfBirth.level == "Level 1" %}
          <img src="../../../public/images/green-tick-icon.svg" title="Green tick" class="ng-scope"> 
          <span class="sl-metadata">Verified to level 1</span>
        {% elif data.personalDetails.dateOfBirth.level == "Not verified" %}
          <img src="../../../public/images/warning-icon-red-small.svg" title="Green tick" class="ng-scope"> 
          <span class="sl-metadata">Not verified</span>
        {% endif %}
      </li>
    </ul>
  </div>

<div class="column-one-third last-col">
  <ul class="edit-menu">
    <li>
      <a data-toggle="modal" data-target="#birth_modal" class="under-link">View maintenance</a> 
      <span class="pipe"> | </span> 
      <a href="/history/birth-history" class="under-link">View history</a>
    </li>
    <li>
      <a href="person-change-handler/?personalDetail=dateOfBirth" class="under-link">Change</a>
    </li>
  </ul>
</div>
</div>
